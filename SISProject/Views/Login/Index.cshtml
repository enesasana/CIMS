<!--Login Index-->

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>ARD - CIMS - Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/AdminDesign/ardgruptitle.png" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/LoginScreenTemplates/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/LoginScreenTemplates/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/LoginScreenTemplates/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/LoginScreenTemplates/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/LoginScreenTemplates/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/LoginScreenTemplates/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/LoginScreenTemplates/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/LoginScreenTemplates/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/LoginScreenTemplates/css/util.css">
    <link rel="stylesheet" type="text/css" href="/LoginScreenTemplates/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100" style="background-color:white">
                <form class="login100-form validate-form" action="/Login/LoginMethod" method="post">
                    <span class="login100-form-title p-b-34">
                        Campus Information System Login
                    </span>

                    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type user name">
                        <input id="first-name" class="input100" type="text" name="userLoginNumber" placeholder="Enter Login Number">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20" data-validate="Type password">
                        <input class="input100" type="password" name="userPassword" placeholder="Enter Password">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Sign in
                        </button>
                    </div>

                    <div class="w-full text-center p-t-27 p-b-239">
                        
                    </div>
                </form>

                <div class="login100-more" style="background-image: url('/LoginScreenTemplates/images/ard_grup_holding_a_s-40580.jpg'); background-size: 40%;"></div>
            </div>
        </div>
    </div>



    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="/LoginScreenTemplates/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="/LoginScreenTemplates/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="/LoginScreenTemplates/vendor/bootstrap/js/popper.js"></script>
    <script src="/LoginScreenTemplates/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="/LoginScreenTemplates/vendor/select2/select2.min.js"></script>
    <script>
        $(".selection-2").select2({
            minimumResultsForSearch: 20,
            dropdownParent: $('#dropDownSelect1')
        });
    </script>
    <!--===============================================================================================-->
    <script src="/LoginScreenTemplates/vendor/daterangepicker/moment.min.js"></script>
    <script src="/LoginScreenTemplates/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="/LoginScreenTemplates/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="/LoginScreenTemplates/js/main.js"></script>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>      
        if(@TempData["alertMessage"] != null)
        {
            if (@TempData["alertMessage"] === 0) {
                swal("You entered wrong password!");
            }
            else if (@TempData["alertMessage"] === 1) {
                swal("There is no such a record.");
            }
            else if (@TempData["alertMessage"] === 2) {
                swal("Incorrect Login Number!", "Please enter a valid Login Number");
            }
            @TempData.Remove("alertMessage");
        }
    </script>

</body>
</html>