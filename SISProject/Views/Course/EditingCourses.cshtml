@using SISProject.Models.SISDB_Data;
@model Courses
@{
    ViewBag.Title = "EditingCourses";
}

<div class="row">
    <div class="col-lg-10">
        <h1>Update Course Info</h1>
    </div>
</div>

<form action="/Course/EditingCourses" method="post">

    <div class="hidden">
        <div class="form-group">
            <input type="text" name="id" value="@Model.TableID" />
        </div>

        <div class="form-group">
            <input type="text" name="facultyID" value="@Model.Deparments.d_Faculties_TableID" />
        </div>

        <div class="form-group">
            <input type="text" name="deptID" value="@Model.c_Departments_TableID" />
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <label for="inputCourseName">Enter the Name of Course</label>
            <input type="text" class="form-control" id="inputCourseName4" name="courseName" value="@Model.c_Name">
        </div>

        <div class="col-lg-3">
            <label for="inputCourseECTS">Enter the ECTS of the Course</label>
            <input type="text" class="form-control" id="inputEcts4" name="courseEcts" value="@Model.c_ECTS">
        </div>

        <div class="col-lg-3">
            <label for="inputCourseTerm">Enter the Term of the Course</label>
            <input type="text" class="form-control" id="inputTerm4" name="courseTerm" value="@Model.c_Term">
        </div>
    </div>

    <div class="row">
        <div class="col-lg-1">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>

</form>
